<table class="table table-condensed">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
  </tr>
  <% @user.each do |user|%>
    <tr>
      <td><%= user.name%></td>
      <td><%= user.email%></td>
      <td><%= user.phone%></td>
      <td><%= link_to "Edit",edit_user_path(user), :class=>'btn btn-primary'%></td>
      <td><%= link_to "Delete",user,method: :delete, data: {confirm:"Are you sure?"}, :class=>'btn btn-danger'%></td>
      <td><%=link_to "Show",user_path(user),:class=>'btn btn-primary' %></td>
    </tr>
    <%end%>
  </table>
<%= link_to "Add User", new_user_path, :class=>'btn btn-primary'%>
